<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cashier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Nama Kasir Lengkap"/>

                <TextView
                    android:id="@+id/tv_cashier_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_green_dark"
                    tools:text="Status: Aktif"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switch_cashier_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Nonaktif"
                android:textOn="Aktif"
                tools:checked="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cashier_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            tools:text="Email: kasir@toko.com"/>

        <TextView
            android:id="@+id/tv_cashier_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            tools:text="WA: 08123456789"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit_cashier"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit Profil"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_delete_cashier"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Hapus Akun"
                android:backgroundTint="@android:color/holo_red_light"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>