<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="#ORD-123456" />

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="10 Des 2025"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            tools:text="Total: Rp 50.000" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            tools:text="Status: DIPROSES | Pembayaran: BELUM_BAYAR" />

        <TextView
            android:id="@+id/tv_order_items_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="italic"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#555555"
            tools:text="Isi: Kopi Susu (x2), Roti Bakar (x1)"/>

        <TextView
            android:id="@+id/tv_pickup_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            tools:text="Metode Pengambilan: DI_KASIR"/>


        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_payment_confirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Konfirmasi Bayar"
                android:textSize="12sp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_order_received"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Pesanan Diterima"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>